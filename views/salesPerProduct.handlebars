<div id="container">
    <form>
	<input id="allsales_search" class="searchBar" type="text" name="Name" placeholder="Search"></input>
</form>
<table id="allsales" class="table table-striped custab" >
    <thead>
        <tr>
            <th>Product</th>
            <th>Qty Sold</th>
            <th>Price(R)</th>
            <th>Date</th>
        </tr>
    </thead>
            <tr>
                {{#each products}}
                <td>{{Name}}</td>
                <td>{{AmtSold}}</td>
    		<td>{{Sales_price}}</td>
    		<td>{{Sales_date}}</td>
            </tr>
            {{/each}}
    </table>
</div>
